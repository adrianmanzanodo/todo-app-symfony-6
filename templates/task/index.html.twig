{% extends 'layout.html.twig' %}

{% block title %}
  Tasks Index
{% endblock %}

{% block page_contents %}
  <h1 class="mb-3 p-2">
    Tasks Index
  </h1>

  <div class="p-2">
    <a class="btn btn-primary" href="{{path('task_create')}}">Crear nueva tarea</a>
  </div>
  <div class="d-flex flex-wrap justify-content-center">
    {% for task in tasks %}
      <div class="p-2">
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">
              {{ task.name }}
            </h5>
            <h6 class="card-subtitle mb-2 text-muted">
              Card subtitle
            </h6>
            <p class="card-text">
              {{ task.description }}
            </p>
            <a href="#" class="card-link">Card link</a>
            <a href="#" class="card-link">Another link</a>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
{% endblock %}
